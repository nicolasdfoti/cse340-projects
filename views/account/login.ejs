<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<div class="messages">
  <p><%- messages() %></p>
</div>

<div class="account-page">

  <form id="loginForm" action="/account/login" method="post">

  <fieldset>
    <label for="account_email">Email<input type="email" name="account_email" id="account_email" required></label>  
  </fieldset>
  
  <fieldset>
    <label for="account_password">Password <span>(Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character)</span> <input type="password" name="account_password" id="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
  </fieldset>
  
  <button>Sign In</button>
  
  <h3>No account? <a href="register">Sign up</a></h3>
  
  </form>

</div>