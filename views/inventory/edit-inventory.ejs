<% if (title) { %>
    <h1><%= title %></h1>
<% } %>

<%- messages() %>

<div class="account-page">

    <form id="updateForm" action="/inv/update" method="post">

        <fieldset>
            <label for="inv_make">Item Name<input type="text" name="inv_make" id="inv_make" required value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>"></label>
        </fieldset>        

        <fieldset>
            <label for="inv_model">Item Model<input type="text" name="inv_model" id="inv_model" required value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>"></label>
        </fieldset>

        <fieldset>
            <label for="inv_year">Item Year <span>(It must contain exactly four numbers!)</span><input type="number" name="inv_year" id="inv_year" required pattern="^\d{4}$" value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>"></label>
        </fieldset>

        <fieldset>
            <label for="inv_description">Item Description<input type="text" name="inv_description" id="inv_description" required value="<%= typeof inv_description !== 'undefined' ? inv_description : '' %>"></label>
        </fieldset>

        <fieldset>
            <label for="inv_image">Item Image Path<input type="text" name="inv_image" id="inv_image" required value="<%= typeof inv_image !== 'undefined' ? inv_image : '' %>"></label>
        </fieldset>

        <fieldset>
            <label for="inv_thumbnail">Item Image Thumbnail<input type="text" name="inv_thumbnail" id="inv_thumbnail" required value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '' %>"></label>
        </fieldset>

        <fieldset>
            <label for="inv_price">Item Price<input type="number" name="inv_price" id="inv_price" required value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>"></label>
        </fieldset>

        <fieldset>
            <label for="inv_miles">Item Miles<input type="number" name="inv_miles" id="inv_miles" required value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>"></label>
        </fieldset>
        
        <fieldset>
            <label for="inv_color">Item Color<input type="text" name="inv_color" id="inv_color" required value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>"></label>
        </fieldset>

        <fieldset>
            <label for="classificationList">Item Classification <%- classificationList %></label>
        </fieldset>

        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>

        <button disabled type="submit">Update Vehicle</button>

    </form>

</div>

<script src="../../js/inv-update.js"></script>